<div class="player">
    <h2><%= @name %></h2>
    <div class="cards">
        
    </div>
    <div class="flash">
    </div>

    <% if !@.isDealer: %>
        <div class="stats">
            <div class="bankroll">Bank: $<span><%= @bankroll - @currentBet %></div>
            <div class="bet">Bet: $<span><%= @currentBet %></div>
        </div>
    <% end %>

    <div class="strategy">
        
    </div>
</div>