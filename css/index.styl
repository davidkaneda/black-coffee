@import './mixin';

body {
  font-family: Helvetica;
  color: #333;
  margin: 10px 100px;
}

.disabled {
  opacity: 0;
  pointer-events: none;
}

.card {
  border-radius: 4px;
  border: 1px solid #ccc;
  display: inline-block;
  width: 60px;
  height: 90px;
  position: relative;
  background-color: white;
  
  box-shadow: rgba(#000, .3) 0 0 4px;

  &:not(:last-child) {
    margin-left: -30px;
  }

  h3 {
    position: absolute;
    top: 10px;
    left: 10px;
    margin: 0;
    padding: 0;

    &:first-child {
      top auto
      left auto
      bottom 10px
      right 10px
    }
  }
}


.hearts, .diamonds {
  color: red  
}

input[name=new] {
  font-size: 5em
}