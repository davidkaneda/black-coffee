@import './mixin';

body {
  font-family: Helvetica;
  color: #333;
  margin: 10px 100px;
}

.disabled {
  opacity: 0;
  pointer-events: none;
}

.cards {
  height: 100px;
  overflow: hidden;
}

.card {
  border-radius: 4px;
  border: 1px solid #ccc;
  display: inline-block;
  float: left;
  width: 60px;
  height: 90px;
  position: relative;
  top: 0;
  left: 0;
  background-color: white;
  
  box-shadow: rgba(#000, .3) 0 1px 1px;
  border: 1px solid rgba(#000, .5)

  padding: 4px;
  text-align: center;
  margin: 0 2px;

  h3 {
    margin: 0;
    line-height: 90px;
  }

}


.hearts, .diams {
  color: red  
}

input[name=new] {
  font-size: 5em
}